#RewriteEngine on

#RewriteCond %{REQUEST_FILENAME} !-d

#RewriteCond %{REQUEST_FILENAME}\.php -f

#RewriteRule ^(.*)$ $1.php [NC,L]

#RewriteRule ^disease_case/([.*]+)/([0-9a-zA-Z_-]+)/([0-9]+) disease_case?tag=$1&tb=$2&id=$3 [NC,L]

Options -MultiViews

RewriteEngine On

RewriteCond %{HTTPS} off
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

#RewriteRule ^writer/([0-9a-zA-z_-]+) writer.php?user=$1 [QSA,L]
#RewriteRule ^disease_case/([.*]+)/([0-9a-zA-Z_-]+)/([0-9]+) disease_case.php?tag=$1&tb=$2&id=$3 [QSA,L]

RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI}.php -f
RewriteRule !\.php$ %{REQUEST_URI}.php [QSA,L]